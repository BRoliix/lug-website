
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Default deny: No one can access anything unless a rule below allows it.
    match /{document=**} {
      allow read, write: if false;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // READ: Any authenticated user can read user profiles (needed for council page).
      allow read: if request.auth != null;

      // CREATE: A user can create their own document upon signup.
      allow create: if request.auth.uid == userId;

      // UPDATE: A user can update their own profile, but cannot make themselves an admin or council member.
      // Admins can update any user's profile.
      allow update: if (request.auth.uid == userId && !("isAdmin" in request.resource.data) && !("isCouncilMember" in request.resource.data)) || request.auth.token.isAdmin == true;
      
      // DELETE: Only admins can delete users.
      allow delete: if request.auth.token.isAdmin == true;
    }

    // Rules for the 'events' collection
    match /events/{eventId} {
      // READ: Any authenticated user can read events.
      allow read: if request.auth != null;
      
      // WRITE (Create, Update, Delete): Only admins can write to the events collection.
      allow write: if request.auth.token.isAdmin == true;
    }

    // Rules for the 'messages' collection (Forum)
    match /messages/{messageId} {
      // READ: Any authenticated user can read forum messages.
      allow read: if request.auth != null;
      
      // CREATE: Any authenticated user can post a message.
      allow create: if request.auth != null;
      
      // UPDATE: No one can edit messages.
      allow update: if false;

      // DELETE: Only admins can delete messages.
      allow delete: if request.auth.token.isAdmin == true;
    }

    // Rules for the 'reports' collection (Bug Reports)
    match /reports/{reportId} {
      // READ: Only admins can read bug reports.
      allow read: if request.auth.token.isAdmin == true;

      // CREATE: Any authenticated user can create a bug report.
      allow create: if request.auth != null;

      // UPDATE: Only admins can update the status of a report.
      allow update: if request.auth.token.isAdmin == true;
      
      // DELETE: Only admins can delete reports.
      allow delete: if request.auth.token.isAdmin == true;
    }
  }
}
