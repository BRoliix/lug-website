
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Users Collection
    match /users/{userId} {
      // Allow anyone to read user profiles (for council page, etc.)
      allow read: if true;
      // Allow a user to create their own document and update it.
      allow create, update: if request.auth.uid == userId;
      // Allow admins to do anything.
      allow write: if request.auth.token.isAdmin == true;
    }

    // Events Collection
    match /events/{eventId} {
      // Anyone can see events
      allow read: if true;
      // Only admins can create, update, or delete events
      allow write: if request.auth.token.isAdmin == true;
    }
    
    // Messages Collection
    match /messages/{messageId} {
        // Anyone signed in can read the forum
        allow read: if request.auth != null;
        // Anyone signed in can create messages
        allow create: if request.auth != null;
        // Only admins can delete messages
        allow delete: if request.auth.token.isAdmin == true;
    }

    // Reports Collection
    match /reports/{reportId} {
      // Admins can read/write reports
      allow read, write: if request.auth.token.isAdmin == true;
      // Authenticated users can create reports
      allow create: if request.auth != null;
    }
    
    // Activities Collection
    match /activities/{activityId} {
      // Users can see their own activity
      allow read: if request.auth.uid == resource.data.userId;
      // Users can create their own activity logs
      allow create: if request.auth.uid == request.resource.data.userId;
       // Admins can read all activity
      allow read: if request.auth.token.isAdmin == true;
    }

    // Members Collection
    match /members/{memberId} {
        // Only admins can manage the members list
        allow read, write: if request.auth.token.isAdmin == true;
    }
  }
}
