
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isActiveSubscriber() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.subscriptionStatus == 'active';
    }

    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Settings are public read, admin write
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Users can read/update their own data.
    // Admins can read/write any user data.
    // Public can read basic data for council members.
    match /users/{userId} {
      allow read: if isSignedIn() || get(/databases/$(database)/documents/users/$(userId)).data.isCouncilMember == true;
      allow update: if isOwner(userId) || isAdmin();
      allow create: if isSignedIn();
      
       // This allows the query in council/page.tsx
      allow list: if true;
    }

    // Events are public read, admin write.
    match /events/{eventId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Members can be read by admins, and created/deleted when subscriptions change.
    match /members/{memberId} {
        allow read, write: if isAdmin();
        allow create: if isOwner(memberId);
    }
    
    // Messages (Forum) can be read/written by active subscribers, or managed by admins.
    match /messages/{messageId} {
      allow read, write: if isActiveSubscriber() || isAdmin();
      allow delete: if isAdmin();
    }

    // Reports are write-only for users, full access for admins.
    match /reports/{reportId} {
        allow create: if isSignedIn();
        allow read, update, delete: if isAdmin();
    }
    
    // Activities can be written by the user, read by admins.
    match /activities/{activityId} {
        allow create: if isSignedIn();
        allow read: if isAdmin();
    }
  }
}
