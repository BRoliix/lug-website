
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to make rules more readable
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      // Check the 'isAdmin' field on the user's document
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Admins can read/write any user document
      // Users can read/write their own document
      allow read, write: if isAdmin() || isOwner(userId);
    }
    
    // Rules for the 'members' collection
    match /members/{memberId} {
        // Admins can read/write all member data
        allow read, write: if isAdmin();
        // Members can read their own data
        allow read: if isOwner(memberId);
    }

    // Rules for the 'events' collection
    match /events/{eventId} {
      // Anyone can read events
      allow read: if true;
      // Only admins can create, update, or delete events
      allow write: if isAdmin();
    }

    // Rules for the 'messages' collection (forum)
    match /messages/{messageId} {
      // Any signed-in user can read messages
      allow read: if isSignedIn();
      // Any signed-in user can create messages
      allow create: if isSignedIn();
      // Only admins can delete messages
      allow delete: if isAdmin();
    }
    
    // Rules for the 'reports' collection
    match /reports/{reportId} {
      // Only admins can read all reports
      allow read: if isAdmin();
      // Any signed-in user can create a report
      allow create: if isSignedIn();
      // Only admins can update or delete reports
      allow update, delete: if isAdmin();
    }
    
    // Rules for the 'activities' collection
    match /activities/{activityId} {
      // Admins can read all activity logs
      // Users can read their own activity log
      allow read: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
      // Users can create their own activity log entries
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      // No one can update or delete activity logs
      allow update, delete: if false;
    }
  }
}
