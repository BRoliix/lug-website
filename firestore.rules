
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuth() {
      return request.auth != null;
    }
    function isUser(userId) {
      return isAuth() && request.auth.uid == userId;
    }
    function userExists(userId) {
        return exists(/databases/$(database)/documents/users/$(userId));
    }
    function isAdmin(userId) {
        return userExists(userId) && get(/databases/$(database)/documents/users/$(userId)).data.isAdmin == true;
    }
    function isActiveMember(userId) {
        return userExists(userId) && get(/databases/$(database)/documents/users/$(userId)).data.subscriptionStatus == 'active';
    }

    // Users Collection:
    // - Anyone can create their own user document on sign up.
    // - Users can only read or update their own data.
    // - Admins can read or update any user's data.
    match /users/{userId} {
      allow read: if isUser(userId) || isAdmin(request.auth.uid);
      allow create: if isUser(userId);
      allow update: if isUser(userId) || isAdmin(request.auth.uid);
    }
    
    // Members Collection (tracks active subscriptions)
    // - Admins can read, create, update, and delete member documents.
    // - Regular users cannot access this collection directly.
    match /members/{memberId} {
        allow read, write: if isAdmin(request.auth.uid);
    }

    // Events Collection:
    // - Admins can create, read, update, and delete events.
    // - Active members can read events.
    match /events/{eventId} {
      allow read: if isActiveMember(request.auth.uid) || isAdmin(request.auth.uid);
      allow write: if isAdmin(request.auth.uid); // Covers create, update, delete
    }

    // Messages Collection (Forum):
    // - Active members and admins can read and create messages.
    // - Users can delete their own messages.
    // - Admins can delete any message.
    match /messages/{messageId} {
      allow read, create: if isActiveMember(request.auth.uid) || isAdmin(request.auth.uid);
      allow delete: if (isUser(resource.data.userId)) || isAdmin(request.auth.uid);
    }
    
    // Reports Collection (Bug Reports)
    // - Any authenticated user can create a report.
    // - Admins can read, update, and delete any report.
    match /reports/{reportId} {
        allow create: if isAuth();
        allow read, update, delete: if isAdmin(request.auth.uid);
    }

    // Activities Collection (User Activity Log)
    // - Users can create their own activity logs.
    // - Users can read their own logs.
    // - Admins can read any user's logs.
    match /activities/{activityId} {
        allow create: if isAuth() && request.resource.data.userId == request.auth.uid;
        allow read: if isUser(resource.data.userId) || isAdmin(request.auth.uid);
    }
    
    // Settings Collection (For feature flags)
    // - Anyone can read the feature flags.
    // - Only admins can update the feature flags.
    match /settings/featureFlags {
        allow read: if true;
        allow write: if isAdmin(request.auth.uid);
    }
  }
}
