rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Users:
    // - Anyone can read users to see council info.
    // - Signed-in users can update their own profile.
    // - Admins can read/write any user document.
    match /users/{userId} {
      allow read;
      allow update: if request.auth.uid == userId || isAdmin();
      allow write: if isAdmin(); // Create/Delete
    }

    // Events:
    // - Anyone can read events.
    // - Admins can create, update, and delete events.
    match /events/{eventId} {
      allow read;
      allow write: if isAdmin();
    }
    
    // Reports:
    // - Signed-in users can create reports.
    // - Admins can read, update, and delete reports.
    match /reports/{reportId} {
        allow create: if request.auth.uid != null;
        allow read, update, delete: if isAdmin();
    }
    
    // Messages:
    // - Signed-in users who are active members (or admins) can read/write.
    // - Admins can delete any message.
    match /messages/{messageId} {
        allow read, create: if request.auth.uid != null;
        allow delete: if isAdmin();
    }

    // Activities:
    // - Users can read/write to their own activity log.
    // - Admins can read any activity log.
    match /activities/{activityId} {
        allow read, create: if request.auth.uid == request.resource.data.userId;
        allow read: if isAdmin();
    }
    
    // Members:
    // - Only Admins can read or write to the members collection.
    match /members/{memberId} {
        allow read, write: if isAdmin();
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}