rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    function isUser(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    function getRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.isAdmin;
    }
    function isAdmin() {
      return isSignedIn() && getRole(request.auth.uid) == true;
    }
    function isMember() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.subscriptionStatus == 'active';
    }

    // Users collection
    match /users/{userId} {
      // Admins can read anyone's profile
      // Users can read their own profile
      allow read: if isAdmin() || isUser(userId);
      // Users can create their own profile on signup
      allow create: if isUser(userId);
      // Users can update their own profile
      // Admins can update any user's profile
      allow update: if isUser(userId) || isAdmin();
    }
    
    // Members collection
    match /members/{userId} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
    }

    // Events collection
    match /events/{eventId} {
      // Only active members and admins can read events
      allow read: if isMember() || isAdmin();
      // Only admins can create, update, or delete events
      allow write: if isAdmin();
    }

    // Messages (Forum) collection
    match /messages/{messageId} {
      // Only active members and admins can read messages
      allow read: if isMember() || isAdmin();
      // Signed-in users can create messages
      allow create: if isSignedIn();
      // Only admins or the user who created the message can delete it
      allow delete: if isAdmin() || resource.data.user == request.auth.token.name;
    }

    // Reports collection
    match /reports/{reportId} {
        // Any signed-in user can create a report
        allow create: if isSignedIn();
        // Only admins can read, update, or delete reports
        allow read, update, delete: if isAdmin();
    }
    
    // Activities collection
    match /activities/{activityId} {
        // Only the user themselves or an admin can read their activities
        allow read: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
        // Users can create their own activity logs
        allow create: if isSignedIn();
    }
    
     // Settings collection (for feature flags)
    match /settings/{settingId} {
        // Anyone can read the settings
        allow read: if true;
        // Only admins can change the settings
        allow write: if isAdmin();
    }
  }
}