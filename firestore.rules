
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users: Public can read, users can only update their own doc
    match /users/{userId} {
      allow read: if true;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow create, delete: if false; // Typically only admins should create/delete users
    }

    // Events: Public can read, nobody can write (admin only)
    match /events/{eventId} {
      allow read: if true;
      allow write: if false; // Or check for admin role: request.auth.token.isAdmin == true
    }

    // Messages: Authenticated users can read/create, can only delete their own
    match /messages/{messageId} {
      allow read, create: if request.auth != null;
      allow update: if false;
      allow delete: if request.auth != null && resource.data.user == request.auth.token.name;
    }
  }
}
