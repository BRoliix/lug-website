
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper functions
    function isUserAuthenticated() {
      return request.auth != null;
    }
    
    function isUser(userId) {
      return isUserAuthenticated() && request.auth.uid == userId;
    }

    function userIsAdmin() {
      return isUserAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Users Collection
    // - Admins can read/write any user document.
    // - Users can read any user document (for profiles, council page, etc.).
    // - Users can only create their own user document and update their own.
    match /users/{userId} {
      allow read; // Allow all users to read profiles (for council page, avatars, etc.)
      allow create: if isUser(userId);
      allow update: if isUser(userId) || userIsAdmin();
      allow delete: if userIsAdmin();
    }
    
    // Members Collection
    // - Only admins can read/write to the members collection.
    match /members/{memberId} {
        allow read, write: if userIsAdmin();
    }
    
    // Activities Collection
    // - Admins can read all activity logs.
    // - Users can only create their own activity logs.
    match /activities/{activityId} {
        allow read: if userIsAdmin();
        allow create: if isUserAuthenticated();
    }

    // Events Collection
    // - All users can read events.
    // - Only admins can create, update, or delete events.
    match /events/{eventId} {
      allow read: if isUserAuthenticated();
      allow write: if userIsAdmin();
    }

    // Messages Collection (Forum)
    // - Authenticated users with an active subscription can read/create messages.
    // - Users can only delete their own messages.
    // - Admins can delete any message.
    match /messages/{messageId} {
      function userIsActiveSubscriber() {
        let userData = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
        return userData.subscriptionStatus == 'active' || userData.isAdmin == true;
      }

      allow read, create: if isUserAuthenticated() && userIsActiveSubscriber();
      allow delete: if userIsAdmin() || (isUserAuthenticated() && resource.data.user == request.auth.displayName);
    }
    
    // Reports Collection
    // - Users can create reports.
    // - Admins can read, update, and delete reports.
    match /reports/{reportId} {
        allow create: if isUserAuthenticated();
        allow read, update, delete: if userIsAdmin();
    }
    
    // Settings Collection (for Feature Flags)
    // - All users can read feature flags.
    // - Only admins can write/update feature flags.
    match /settings/featureFlags {
        allow read;
        allow write: if userIsAdmin();
    }
  }
}
